<div class="bg-white p-4 rounded-xl shadow">
	<div class="flex justify-between items-start mb-2">
		<h3 class="text-lg font-semibold text-pink-600">{{ mission.title }}</h3>
	</div>

	<p class="text-sm text-gray-700 mb-4">
		{{ mission.description }}
	</p>

	{% if mission.rewards is defined and mission.rewards|length > 0 %}
		<div class="text-sm text-gray-600">
			<span class="font-semibold text-pink-500">Récompenses :</span>
			<ul class="list-disc list-inside mt-1 space-y-1">
				{% for reward in mission.rewards %}
					<li>{{ reward.name }}</li>
				{% endfor %}
			</ul>
		</div>
	{% else %}
		<div class="text-xs italic text-gray-400">Aucune récompense spécifiée.</div>
	{% endif %}
</div>
