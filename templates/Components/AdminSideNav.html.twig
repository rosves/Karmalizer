{% block sidebar %}
<!-- Bouton toggle visible sur mobile -->
<button id="sidebar-toggle" class="lg:hidden fixed top-4 left-4 z-50 bg-white p-2 rounded shadow">
    ☰
</button>

<aside id="sidebar" class="hidden lg:block w-full lg:w-64 bg-white shadow-lg p-6 lg:min-h-screen relative">
    <button id="sidebar-close" class="lg:hidden absolute top-4 right-4 text-gray-700 text-2xl font-bold">&times;</button>

    <div class="flex items-center justify-center mb-10">
        <h1 class="text-2xl font-bold text-pink-600">Admin Karmalizer</h1>
    </div>

    {% set currentRoute = app.request.attributes.get('_route') %}

    <nav class="mt-4 text-sm">
        <a href="{{ path('admin') }}" class="block px-4 py-2 hover:bg-pink-100 {{ app.request.attributes.get('_route') == 'admin' ? 'text-pink-600 font-bold' : '' }}">Dashboard</a>
        <a href="{{ path('admin_missions') }}" class="block px-4 py-2 hover:bg-pink-100 {{ app.request.attributes.get('_route') == 'admin_missions' ? 'text-pink-600 font-bold' : '' }}">Missions</a>
        <a href="{{ path('admin_rewards') }}" class="block px-4 py-2 hover:bg-pink-100 {{ app.request.attributes.get('_route') == 'admin_rewards' ? 'text-pink-600 font-bold' : '' }}">Récompenses</a>
        <a href="{{ path('admin_users') }}" class="block px-4 py-2 hover:bg-pink-100 {{ app.request.attributes.get('_route') == 'admin_users' ? 'text-pink-600 font-bold' : '' }}">Utilisateurs & Rôles</a>
    </nav>

    <div class="mt-10">
        <a href="{{ path('app_logout') }}" class="block w-full text-center bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 rounded-xl transition">
            Déconnexion
        </a>
    </div>
</aside>
{% endblock %}
