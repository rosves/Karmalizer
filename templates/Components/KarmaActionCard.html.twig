

{% if action is instanceof('App\\Entity\\Apology') %}
    <div class="mb-2.5 bg-white p-4 rounded-xl shadow text-sm text-gray-700">
        <p class="font-semibold text-gray-800">Excuse présentée</p>
        <p class="mt-1">{{ action.message }}</p>
    </div>

{% elseif action is instanceof('App\\Entity\\Donation') %}
    <div class="mb-2.5 bg-white p-4 rounded-xl shadow text-sm text-gray-700">
        <p class="font-semibold text-gray-800">Don effectué</p>
        <p class="mt-1">
            {{ action.amount }}€
            <span class="text-gray-500">vers</span>
            <em>{{ action.donationTarget }}</em>
        </p>
    </div>

{% elseif action is instanceof('App\\Entity\\CreativeRedemption') %}
    <div class=" mb-2.5 bg-white p-4 rounded-xl shadow text-sm text-gray-700">
        <p class="font-semibold text-gray-800">Action créative</p>
        <p class="mt-1 italic text-gray-600">{{ action.content }}</p>
    </div>

{% elseif action is instanceof('App\\Entity\\Goodeed') %}
    <div class="mb-2.5 bg-white p-4 rounded-xl shadow text-sm text-gray-700">
        <p class="font-semibold text-gray-800">Bonne action</p>
        <p class="mt-1">{{ action.description }}</p>
    </div>
{% endif %}
