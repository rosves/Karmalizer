{% block sidebar %}
	<!-- Bouton toggle visible sur mobile -->
	<button id="sidebar-toggle" class="lg:hidden fixed top-4 left-4 z-50 bg-white p-2 rounded shadow">
		☰
	</button>

	<aside id="sidebar" class="hidden lg:block w-full lg:w-64 bg-white shadow-lg p-6 lg:min-h-screen relative">
		<button id="sidebar-close" class="lg:hidden absolute top-4 right-4 text-gray-700 text-2xl font-bold">&times;</button>
		<div class="flex items-center justify-center mb-10">
			<h1 class="text-2xl font-bold text-pink-600">Karmalizer</h1>
		</div>
		<nav class="space-y-4 text-sm">
			<a href="{{ path('app_dashboard') }}" class="block font-medium {{ app.request.attributes.get('_route') == 'app_dashboard' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Tableau de bord
			</a>
			<a href="{{ path('app_analyse') }}" class="block font-medium {{ app.request.attributes.get('_route') == 'app_analyse' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Analyse de Post
			</a>
			<a href="#" class="block font-medium {{ app.request.attributes.get('_route') == 'missions' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Missions
			</a>
			<a href="#" class="block font-medium {{ app.request.attributes.get('_route') == 'rewards' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Rewards
			</a>
			<a href="#" class="block font-medium {{ app.request.attributes.get('_route') == 'actions_a_faire' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Actions à faire
			</a>
			<a href="#" class="block font-medium {{ app.request.attributes.get('_route') == 'ranking' ? 'text-pink-600 font-bold' : 'text-gray-700 hover:text-pink-600' }}">
				Ranking
			</a>
		</nav>
		<div class="mt-10">
			<a href="{{ path('app_logout') }}" class="block w-full text-center bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 rounded-xl transition">
				Déconnexion
			</a>
		</div>
	</aside>
{% endblock %}
